<p>
  <b>Increment:</b>
  <%= @activity.increment_id %>
</p>

<p>
  <b>Name:</b>
  <%= @activity.name %>
</p>

<p>
  <b>Start time:</b>
  <%= @activity.start_time %>
</p>

<p>
  <b>End time:</b>
  <%= @activity.end_time %>
</p>

<p>
  <b>Order count:</b>
  <%= @activity.order_count %>
</p>

<p>
  <b>Sale count:</b>
  <%= @activity.sale_count %>
</p>

<p>
  <b>Sales channels:</b>
  <%= @activity.sales_channel.name %>
</p>

<p>
  <b>Products</b>
  <% @activity.products.each do |product| %>
  <label>Outer Sku: <%= product.outer_sku %></label>
  <label>Activity Price: <%= product.activity_price %></label>
  <% end %>
</p>

<%= link_to 'Edit', edit_activity_path(@activity) %> |
